# Application
APP_NAME=lapis-spider
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# Frontend
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lapis_spider
POSTGRES_USER=lapis
POSTGRES_PASSWORD=your-secure-password

# Database - MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=lapis_spider

# Database - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=30

# Crawler Settings
MAX_PAGES_PER_CRAWL=1000
CRAWL_TIMEOUT_SECONDS=3600
USER_AGENT=Lapis-Spider/1.0 (+https://lapis-spider.com/bot)
CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RESPECT_ROBOTS_TXT=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Storage
STORAGE_RETENTION_DAYS=90
STORAGE_COMPRESSION=true

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@lapis-spider.com
SMTP_TLS=true

# Slack (for notifications)
SLACK_WEBHOOK_URL=

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
TRUSTED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =====================================================
# PORT CONFIGURATION EXAMPLES
# =====================================================
# To run everything on different ports, modify these:

# Example: Run API on port 8080 instead of 8000
# APP_PORT=8080
# FRONTEND_URL=http://localhost:3000
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Example: Run frontend on port 3001
# FRONTEND_PORT=3001
# FRONTEND_URL=http://localhost:3001
# CORS_ORIGINS=http://localhost:3001,http://localhost:8000

# Example: Use different database ports
# POSTGRES_PORT=5433
# MONGODB_PORT=27018
# REDIS_PORT=6380
# REDIS_URL=redis://localhost:6380/0
# CELERY_BROKER_URL=redis://localhost:6380/1
# CELERY_RESULT_BACKEND=redis://localhost:6380/2

# Example: Run monitoring on different port
# PROMETHEUS_PORT=9091